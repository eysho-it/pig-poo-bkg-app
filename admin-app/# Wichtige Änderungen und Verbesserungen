    let apiKey = localStorage.getItem('api_key');
    if (apiKey) {
        // EntschlÃ¼sselungslogik hier einfÃ¼gen
        console.log('API-SchlÃ¼ssel geladen:', apiKey);
    } else {
        console.log('Kein API-SchlÃ¼ssel gefunden');
    }
});
