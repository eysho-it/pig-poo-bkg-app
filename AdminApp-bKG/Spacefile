 Spacefile - MeineAdminApp

# Runtime environment
runtime: "python3.11"

# Dependencies
dependencies:
  - "flask"
  - "python-dotenv"
  - "deta"
  - "bcrypt"  # Für Passwort-Hashing
  - "itsdangerous"  # Für CSRF-Schutz
  - "flask-mail"  # Für E-Mail-Versand

# Build command
build: "pip install -r requirements.txt"

# Run command
run: "python backend/app.py"

# Function configuration (HTTP API)
functions:
  app:
    route: "/"